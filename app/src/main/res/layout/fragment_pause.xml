<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg_80"
    android:fitsSystemWindows="true">

    <thapl.com.fudis.ui.components.CheckableTextView
        android:id="@+id/tvOrders"
        style="@style/ButtonStyleMenu"
        android:layout_marginStart="@dimen/dp60"
        android:layout_marginTop="@dimen/dp64"
        android:layout_marginEnd="@dimen/dp10"
        android:drawableStart="@drawable/sl_orders"
        android:text="@string/menu_orders"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/tvPause"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <thapl.com.fudis.ui.components.CheckableTextView
        android:id="@+id/tvPause"
        style="@style/ButtonStyleMenu"
        android:layout_marginTop="@dimen/dp64"
        android:layout_marginEnd="@dimen/dp10"
        android:drawableStart="@drawable/sl_pause"
        android:text="@string/menu_pause"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/tvStops"
        app:layout_constraintStart_toEndOf="@+id/tvOrders"
        app:layout_constraintTop_toTopOf="parent" />

    <thapl.com.fudis.ui.components.CheckableTextView
        android:id="@+id/tvStops"
        style="@style/ButtonStyleMenu"
        android:layout_marginTop="@dimen/dp64"
        android:layout_marginEnd="@dimen/dp10"
        android:drawableStart="@drawable/sl_stops"
        android:text="@string/menu_stops"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/tvHelp"
        app:layout_constraintStart_toEndOf="@+id/tvPause"
        app:layout_constraintTop_toTopOf="parent" />

    <thapl.com.fudis.ui.components.CheckableTextView
        android:id="@+id/tvHelp"
        style="@style/ButtonStyleMenu"
        android:layout_marginTop="@dimen/dp64"
        android:layout_marginEnd="@dimen/dp50"
        android:drawableStart="@drawable/sl_help"
        android:text="@string/menu_help"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvStops"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/vContentWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bg_rounded_wh_32"
        android:elevation="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.51">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPeriodTitle"
            style="@style/TextStyle.Black.24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp48"
            android:layout_marginTop="@dimen/dp48"
            android:layout_marginEnd="@dimen/dp48"
            android:text="@string/pause_period_title" />

        <RadioGroup
            android:id="@+id/rgPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp48"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginEnd="@dimen/dp48"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rb15"
                style="@style/ButtonStyleRadio"
                android:layout_marginEnd="@dimen/dp28"
                android:text="@string/pause_period_15" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rb30"
                style="@style/ButtonStyleRadio"
                android:layout_marginEnd="@dimen/dp28"
                android:text="@string/pause_period_30" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rb60"
                style="@style/ButtonStyleRadio"
                android:layout_marginEnd="@dimen/dp28"
                android:text="@string/pause_period_60" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbDay"
                style="@style/ButtonStyleRadio"
                android:text="@string/pause_period_day" />

        </RadioGroup>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvReasonTitle"
            style="@style/TextStyle.Black.24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp48"
            android:layout_marginTop="@dimen/dp24"
            android:layout_marginEnd="@dimen/dp48"
            android:text="@string/pause_reason_title" />

        <RadioGroup
            android:id="@+id/rgReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp48"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginEnd="@dimen/dp48"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbTime"
                style="@style/ButtonStyleRadio"
                android:layout_marginEnd="@dimen/dp28"
                android:text="@string/pause_reason_time" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbFood"
                style="@style/ButtonStyleRadio"
                android:layout_marginEnd="@dimen/dp28"
                android:text="@string/pause_reason_food" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbOther"
                style="@style/ButtonStyleRadio"
                android:text="@string/pause_reason_other" />

        </RadioGroup>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvActionPause"
            style="@style/ButtonStyleGreen"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp48"
            android:layout_marginTop="@dimen/dp36"
            android:layout_marginEnd="@dimen/dp48"
            android:layout_marginBottom="@dimen/dp48"
            android:elevation="2dp"
            android:text="@string/pause_action"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPwd"
            app:layout_constraintWidth_percent="0.33" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/dp64"
        android:layout_height="@dimen/dp64"
        android:layout_marginStart="@dimen/dp24"
        android:background="@drawable/ic_bg_circle_tr_ripple"
        android:elevation="2dp"
        android:padding="@dimen/dp14"
        app:layout_constraintStart_toEndOf="@+id/vContentWrapper"
        app:layout_constraintTop_toTopOf="@+id/vContentWrapper"
        app:srcCompat="@drawable/ic_close_36_g" />

</androidx.constraintlayout.widget.ConstraintLayout>