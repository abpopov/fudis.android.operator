<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <View
        android:id="@+id/vDivider"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp2"
        android:background="@color/black_05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvItemCount"
        style="@style/TextStyle.Grey.24"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp36"
        android:layout_marginBottom="@dimen/dp36"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/dp32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vSpace2"
        app:layout_constraintTop_toBottomOf="@+id/vDivider"
        tools:text="1.1" />

    <View
        android:id="@+id/vSpace2"
        android:layout_width="@dimen/dp48"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vDivider" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvItemName"
        style="@style/TextStyle.Black.24"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp36"
        android:layout_marginBottom="@dimen/dp36"
        android:paddingStart="@dimen/dp72"
        android:paddingEnd="@dimen/dp32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vSpace2"
        app:layout_constraintTop_toBottomOf="@+id/vDivider"
        tools:text="Пицца Маргарита" />

    <View
        android:id="@+id/vSpace"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvItemName" />

</androidx.constraintlayout.widget.ConstraintLayout>