<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/orders_navigation"
    app:startDestination="@id/orderListFragment">

    <dialog
        android:id="@+id/confirmFragment"
        android:name="thapl.com.fudis.ui.dialogs.StopConfirmFragment"
        android:label="confirmFragment"
        tools:layout="@layout/fragment_stop_confirm">
        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_close"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/confirmFragment"
            app:popUpToInclusive="true" />
    </dialog>

    <fragment
        android:id="@+id/orderListFragment"
        android:name="thapl.com.fudis.ui.orders.OrderListFragment"
        android:label="orderListFragment"
        tools:layout="@layout/fragment_order_list">
        <action
            android:id="@+id/action_order"
            app:destination="@id/orderFragment"
            app:enterAnim="@anim/anim_enter_from_right"
            app:exitAnim="@anim/anim_exit_to_left"
            app:popEnterAnim="@anim/anim_enter_from_left"
            app:popExitAnim="@anim/anim_exit_to_right" />
    </fragment>

    <fragment
        android:id="@+id/orderFragment"
        android:name="thapl.com.fudis.ui.orders.OrderFragment"
        android:label="orderFragment"
        tools:layout="@layout/fragment_order">
        <action
            android:id="@+id/action_back"
            app:popUpTo="@+id/orderFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_receipt"
            app:destination="@id/receiptFragment"
            app:enterAnim="@anim/anim_enter_from_right"
            app:exitAnim="@anim/anim_exit_to_left"
            app:popEnterAnim="@anim/anim_enter_from_left"
            app:popExitAnim="@anim/anim_exit_to_right" />
        <argument
            android:name="order"
            app:argType="thapl.com.fudis.domain.model.OrderEntity" />
    </fragment>

    <fragment
        android:id="@+id/receiptFragment"
        android:name="thapl.com.fudis.ui.orders.ReceiptFragment"
        android:label="receiptFragment"
        tools:layout="@layout/fragment_receipt">

    </fragment>

    <fragment
        android:id="@+id/stopsFragment"
        android:name="thapl.com.fudis.ui.stops.StopsFragment"
        android:label="stopsFragment"
        tools:layout="@layout/fragment_stops">
        <action
            android:id="@+id/action_confirm"
            app:destination="@id/confirmFragment"
            app:launchSingleTop="true" />
    </fragment>

</navigation>