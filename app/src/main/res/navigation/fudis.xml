<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">

    <action
        android:id="@+id/action_help"
        app:destination="@id/helpFragment"
        app:launchSingleTop="true" />

    <action
        android:id="@+id/action_pause"
        app:destination="@id/pauseFragment"
        app:launchSingleTop="true" />

    <dialog
        android:id="@+id/helpFragment"
        android:name="thapl.com.fudis.ui.dialogs.HelpFragment"
        android:label="helpFragment"
        tools:layout="@layout/fragment_help">
        <argument
            android:name="source"
            app:argType="integer" />
        <action
            android:id="@+id/action_close"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/helpFragment"
            app:popUpToInclusive="true" />
    </dialog>

    <dialog
        android:id="@+id/pauseFragment"
        android:name="thapl.com.fudis.ui.dialogs.PauseFragment"
        android:label="pauseFragment"
        tools:layout="@layout/fragment_pause">
        <argument
            android:name="source"
            app:argType="integer" />
        <action
            android:id="@+id/action_close"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/pauseFragment"
            app:popUpToInclusive="true" />
    </dialog>

    <fragment
        android:id="@+id/splashFragment"
        android:name="thapl.com.fudis.ui.splash.SplashFragment"
        android:label="splashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_auth"
            app:destination="@id/authFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_orders"
            app:destination="@id/ordersFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/ordersFragment"
        android:name="thapl.com.fudis.ui.orders.OrdersFragment"
        android:label="ordersFragment"
        tools:layout="@layout/fragment_orders">
        <action
            android:id="@+id/action_stops"
            app:destination="@id/stopsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/authFragment"
        android:name="thapl.com.fudis.ui.register.RegisterFragment"
        android:label="authFragment"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_orders"
            app:destination="@id/ordersFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>